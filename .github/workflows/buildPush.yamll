on:
 push:
 workflow_dispatch:

permissions:
  packages: write

jobs:
  buildcontainer:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4.1.2
      - uses: docker/login-action@v1
        with:
           registry: ghcr.io
           username: ${{ github.actor }}
           password: ${{ secrets.GITHUB_TOKEN }}
      - name: Build and push
        uses: docker/build-push-action@v5
        with:
          context: .
          push: true
          tags: wamah/app:latest
  
